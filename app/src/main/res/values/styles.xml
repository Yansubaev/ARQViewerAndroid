<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="ARQVTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="ARQVTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="sign_in_wlk">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#4A4A4A</item>
    </style>

    <style name="sign_in">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="card_top_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#212128</item>
    </style>

    <style name="card_bottom_text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#B2B2B2</item>
    </style>

    <style name="top_text_activity_name">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#212128</item>
    </style>

    <style name="project_name">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ARQVTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ARQVTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ARQVTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
